{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"target": "es2017",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./",
		"incremental": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": false,
		"strictPropertyInitialization": false,
		"paths": {
			"@core/*": ["./src/core/*"],
			"@common/*": ["./src/common/*"],
			"@config/*": ["./src/config/*"],
			"@modules/*": ["./src/modules/*"]
		},
		"typeRoots": ["./node_modules/@types", "./src/types"]
	}
}
